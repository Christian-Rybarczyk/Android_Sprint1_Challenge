<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MovieActivity">

    <Button
            android:text="@string/delete_movie"
            android:textColor="@color/white"
            android:background="@color/guardsman_red"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/add_movie_to_list_button"/>
    <Button
            android:text="@string/add_movie"
            android:textColor="@color/white"
            android:background="@color/japanese_laurel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_movie_to_list_button" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>
    <EditText
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:text="@string/movie_title"
            android:ems="10"
            android:id="@+id/editText_movie_title"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/delete_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <Switch
            android:text="@string/watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/watched_switch" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText_movie_title"
            app:layout_constraintStart_toEndOf="@+id/editText_movie_title" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>